<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coop Sign In Default Text"
        android:id="@+id/welcomeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patronVolunteerSignInRedirect"
        android:id="@+id/patronSignInButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/adminPanelButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adminPanelButton"
        android:id="@+id/adminPanelButton"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/patronSignInButton"
        android:layout_alignEnd="@+id/patronSignInButton"
        android:layout_alignLeft="@+id/patronSignInButton"
        android:layout_alignStart="@+id/patronSignInButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/couch"
        android:layout_alignBottom="@+id/patronSignInButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>