<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeMessage"
        android:id="@+id/welcomeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentLight"
        android:textSize="20sp"
        android:text="@string/contactSignInRedirect"
        android:id="@+id/contactSignInRedirectButton"
        android:nextFocusDown="@+id/adminPanelButton"
        android:layout_alignTop="@+id/adminPanelButton"
        android:layout_toLeftOf="@+id/welcomeText"
        android:layout_toStartOf="@+id/welcomeText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentLight"
        android:textSize="20sp"
        android:text="@string/adminPanelButton"
        android:id="@+id/adminPanelButton"
        android:nextFocusDown="@+id/contactSignInButton"
        android:layout_marginBottom="118dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/welcomeText"
        android:layout_toEndOf="@+id/welcomeText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/couch"
        android:layout_alignBottom="@+id/contactSignInRedirectButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>