<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.signin2.ui.PatronSignInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patronNameLabel"
        android:id="@+id/nameTextView"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        style="@style/CustomFormLabel"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameEditText"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nameTextView"
        android:layout_toEndOf="@+id/nameTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patronPurposeLabel"
        android:id="@+id/purposeTextView"
        android:layout_below="@+id/nameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textSize="20sp"
        style="@style/CustomFormLabel"
        android:layout_alignRight="@+id/durationRadioGroup"
        android:layout_alignEnd="@+id/durationRadioGroup"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purposeRadioGroup"
        android:layout_alignTop="@+id/purposeTextView"
        android:layout_marginTop="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radioFixBike"
            android:id="@+id/fixBikeRadioButton"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:text="@string/radioVolunteer"
            android:id="@+id/volunteerRadioButton"
            android:layout_gravity="left|center_horizontal"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patronPurposeRadioGroupLabel"
        android:id="@+id/durationTextView"
        android:textSize="20sp"
        android:layout_below="@+id/purposeRadioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        style="@style/CustomFormLabel"
        android:layout_alignRight="@+id/durationRadioGroup"
        android:layout_alignEnd="@+id/durationRadioGroup"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/durationRadioGroup"
        android:layout_below="@+id/durationTextView"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oneHour"
            android:id="@+id/oneHourRadioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twoHours"
            android:id="@+id/twoHourRadioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/threeHours"
            android:id="@+id/threeHourRadioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fourHours"
            android:id="@+id/fourHoursRadioButton"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/durationRadioGroup"
            android:layout_alignStart="@+id/durationRadioGroup"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fiveHours"
            android:id="@+id/fiveHourRadioButton"
            android:checked="false" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:text="@string/iAgreeButton"
        android:id="@+id/signInButton"
        android:layout_gravity="right"
        android:layout_below="@+id/agreementTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/saferSpaceAgreement"
        android:id="@+id/agreementTextView"
        android:layout_below="@+id/durationTextView"
        android:layout_alignLeft="@+id/signInButton"
        android:layout_alignStart="@+id/signInButton" />

</RelativeLayout>
